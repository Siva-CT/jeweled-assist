rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // RESTRICTED: By default, deny all access to client-side SDKs
    // Since we use the Admin SDK on the server, these rules don't affect us.
    // But they protect against accidental exposure if API keys leak.
    match /{document=**} {
      allow read, write: if false;
    }

    // EXAMPLE: If you ever enable Client-Side (React) Access
    // match /approvals/{approvalId} {
    //   allow read: if request.auth != null && request.auth.token.role == 'owner';
    // }
  }
}
